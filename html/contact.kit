<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest</title>
    <!--@include 'styles.kit'-->
</head>

<body>
    <header class="header" id="#home">
        <!--@include 'nav.kit'-->
        <div class="hero">
            <div class="hero__bg hero__bg--third">
                <div class="hero__bg-shadow"></div>
                <h1 class="contact__title">Kontakt</h1>
            </div>
        </div>
    </header>
    <section class="contact">
        <div class="wrapper">


            <p class="contact__text">Skontaktuj się z nami! <i class="fa-regular fa-paper-plane"></i></p>
            <div class="contact__main" data-aos="zoom-out-right" data-aos-duration="800" data-aos-easing="ease-in-out">
                <div class="contact__hq">
                    <h3 class="contact__hq-heading">nasza siedziba</h3>
                    <p class="contact__hq-address"> Osowiec-Twierdza 10</p>
                    <p class="contact__hq-address"> 19-410 Goniądz</p>
                </div>
                <div class="contact__data">
                    <p class="contact__data-items"><i class="fa-solid fa-phone"></i> +22 999 786 576</p>
                    <p class="contact__data-items"><i class="fa-solid fa-envelope"></i> kontakt@forest.pl</p>
                </div>

            </div>

            <form action="" class="contact__form">
                <div class="contact__form-right">

                    <input type="text" class="contact__form-input contact__form-input--name" id="name"
                        placeholder="Twoje imię">

                    <input type="email" class="contact__form-input contact__form-input--email" id="email"
                        placeholder="Adres e-mail">


                    <select id="subject" class="contact__form-select">
                        <option class="contact__form-option" value="0">--Wybierz kategorię--</option>
                        <option class="contact__form-option" value="1">Zakup pakietu</option>
                        <option class="contact__form-option" value="2">Pytanie odnośnie oferty</option>
                        <option class="contact__form-option" value="3">Płatności</option>
                        <option class="contact__form-option" value="4">Inne</option>
                    </select>

                    <textarea id="msg" class="contact__form-textarea" placeholder="W czym możemy pomóc?"></textarea>
                    <button type="submit" class="contact__form-btn">Wyślij</button>
                </div>


                <div class="contact__form-map" id="map">

                </div>
            </form>
        </div>
    </section>



    <!-- @include "footer.kit"-->

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAF9Q8amBVF05M0WSlbfaazmOZBI8K8b24&callback=initMap&v=weekly"
        defer></script>
    <script>
        AOS.init();
    </script>

    <script async src="/src/js/main.js"></script>
</body>

</html>